							<td>
								@Html.CheckBoxFor(model => model.LeistungsbildActive[i])
							</td>
							<td>
								@Html.DisplayFor(model => model.LeistungsbildName[i])
							</td>
							<td>
								@Html.EditorFor(model => model.MoneyAmount[i])
							</td>
						</tr>
						}
						if (Model.LeistungsbildDepth[i] == 1)
						{
						@Html.HiddenFor(model => model.LeistungsbildID[i])
						@Html.HiddenFor(model => model.LeistungsbildName[i])
						<tr class="table-primary">
							<td>
								@Html.CheckBoxFor(model => model.LeistungsbildActive[i])
							</td>
							<td>
								@Html.DisplayFor(model => model.LeistungsbildName[i])
							</td>
							<td>
								@Html.EditorFor(model => model.MoneyAmount[i])
							</td>
						</tr>
						}
						if (Model.LeistungsbildDepth[i] == 2)
						{
						@Html.HiddenFor(model => model.LeistungsbildID[i])
						@Html.HiddenFor(model => model.LeistungsbildName[i])
						<tr class="table-success">
							<td>
								@Html.CheckBoxFor(model => model.LeistungsbildActive[i])
							</td>
							<td>
								@Html.DisplayFor(model => model.LeistungsbildName[i])
							</td>
							<td>
								@Html.EditorFor(model => model.MoneyAmount[i])
							</td>
						</tr>
						}
						if (Model.LeistungsbildDepth[i] == 3)
						{
						@Html.HiddenFor(model => model.LeistungsbildID[i])
						@Html.HiddenFor(model => model.LeistungsbildName[i])
						<tr class="table-success">
							<td>
								@Html.CheckBoxFor(model => model.LeistungsbildActive[i])
							</td>
							<td>
								@Html.DisplayFor(model => model.LeistungsbildName[i])
							</td>
							<td>
								@Html.EditorFor(model => model.MoneyAmount[i])
							</td>
						</tr>
						}
					}
				</tbody>
			</table>
		
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
