@model BestellserviceWeb.Models.LeistungsbilderProjektList

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TblLeistungsbilderProjekt</h4>
<hr />
<div class="row">
	<div>
		<form asp-action="Create">
			<div class="form-group">
				<label asp-for="ProjektID" class="control-label"></label>
				<select asp-for="ProjektID" class="form-control" asp-items="ViewBag.LeistpProjekt"></select>
			</div>
