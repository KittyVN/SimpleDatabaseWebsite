            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KunNachname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KunGeschlecht)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KunGeburtsdatum)
            </td>
